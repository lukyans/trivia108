<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h2 class="card-title text-center">Forgot your password?</h2>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control mb-2' %>
            <%= f.submit "Send me reset password instructions", class: "btn btn-info btn-block btn-lg mb-2 mt-4" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

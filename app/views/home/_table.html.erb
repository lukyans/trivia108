<div class="container col-10 table-wrapper-scroll-y my-custom-scrollbar mt-3 mb-5">
  <table class="table table-dark mb-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Score</th>
      </tr>
    </thead>
    <tbody>
      <% @top_users.each.with_index(1) do |user, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= user.email %></td>
          <td><%= user.points %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
